<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/color_bg"
    tools:context=".Admin">

    <RelativeLayout
        android:layout_width="405dp"
        android:layout_height="592dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        app:layout_constraintVertical_bias="0.495">

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="166dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="42dp"
            android:layout_weight="1"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/c166"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="280dp"
                    android:layout_height="115dp"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    app:srcCompat="@drawable/adduser" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="149dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="118dp"
                    android:gravity="center"
                    android:text="Add User"
                    android:textColor="@color/black"
                    android:textStyle="bold|italic" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/c167"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="25dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="251dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    app:srcCompat="@drawable/remove" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="148dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="118dp"
                    android:gravity="center"
                    android:text="Remove User"
                    android:textColor="@color/black"
                    android:textStyle="bold|italic" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="325dp"
            android:layout_height="157dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="42dp"
            android:layout_marginBottom="241dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/c168"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="113dp"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    app:srcCompat="@drawable/addb" />

                <TextView
                    android:layout_width="148dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="122dp"
                    android:gravity="center"
                    android:text="Add Books"
                    android:textColor="@color/black"
                    android:textStyle="bold|italic" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/c169"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="196dp"
                    android:layout_height="112dp"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    app:srcCompat="@drawable/re" />

                <TextView
                    android:layout_width="146dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="122dp"
                    android:gravity="center"
                    android:text="Remove Books"
                    android:textColor="@color/black"
                    android:textStyle="bold|italic" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="161dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="42dp"
            android:layout_marginBottom="58dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/c170"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="183dp"
                    android:layout_height="99dp"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    app:srcCompat="@drawable/upda" />

                <TextView
                    android:layout_width="144dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="122dp"
                    android:gravity="center"
                    android:text="Update Books"
                    android:textColor="@color/black"
                    android:textStyle="bold|italic" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/c171"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="183dp"
                    android:layout_height="99dp"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    app:srcCompat="@drawable/fee" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="122dp"
                    android:gravity="center"
                    android:text="Feedback"
                    android:textColor="@color/black"
                    android:textStyle="bold|italic" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="116dp"
            android:layout_marginBottom="32dp"
            android:text=""
            android:textColor="#2EFFFFFF"
            android:textSize="16sp"
            android:textStyle="bold|italic" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>